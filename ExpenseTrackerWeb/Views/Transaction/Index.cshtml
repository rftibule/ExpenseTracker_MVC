@model IEnumerable<Transaction>

<h1>Title </h1>
<div class="container">
    <div class="card">
        <div class="card-body bg-dark">
            <table class="table table-striped table-bordered" id="myTable">
                <thead>
                    <tr>
                        <td>ID</td>
                        <td>Category</td>
                        <td>Amount</td>
                        <td>Date</td>
                        <td class="text-center">Action</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.Category.Name
                            </td>
                            <td>
                                @item.Amount
                            </td>
                            <td>
                                @item.Date
                            </td>
                            <td class="text-center">
                                <a href="#" class="text-danger bi-alarm" data-id="@item.Id">
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" src="//cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />
<script type="text/javascript" src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"> </script>

<script type="text/javascript">
    var js = jQuery.noConflict(true);

    js(document).ready(function () {
        js('#myTable').DataTable();
    });
</script>
